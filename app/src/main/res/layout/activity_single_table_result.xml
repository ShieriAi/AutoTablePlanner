<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".makeit.SingleTableResultActivity">

    <TextView
        android:id="@+id/textViewTableName_result"
        android:layout_width="match_parent"
        android:text="@string/makeItButton"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_height="50dp"
        android:background="#815463"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/table_result_display"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/recyclerView_single_table_result"/>

</LinearLayout>
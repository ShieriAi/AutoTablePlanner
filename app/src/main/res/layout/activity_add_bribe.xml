<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="30"
    tools:context=".bribes.AddBribeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:orientation="vertical"
        android:weightSum="20">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC773"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="@string/proximity_select_target_type_hint"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/bribe_select_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC773"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="@string/proximity_select_type_hint"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/bribe_select_guest_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC773"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="@string/bribe_set_amount_hint"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/bribe_amount_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:paddingVertical="5dp"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_bg"
            android:text="@string/bribe_satis_hint"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/cardview_dark_background" />

        <SeekBar
            android:id="@+id/seekBar_add_bribe"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:min="1"
            android:max="5"
            android:progressBackgroundTint="#647764"
            android:thumbTint="#647764" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/seekbar_min"
                android:textColor="@color/cardview_dark_background"
                android:textAllCaps="true"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/bribe_satis_seekbar_display"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero"
                android:textAllCaps="true"
                android:textColor="#647764"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/seekbar_max"
                android:textAllCaps="true"
                android:textColor="@color/cardview_dark_background" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/button_add_bribe_with_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#647764"
            android:text="@string/addBribebtn"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>